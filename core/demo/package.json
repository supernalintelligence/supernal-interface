{
  "name": "@supernal-interface/demo",
  "version": "1.0.0",
  "description": "Working demo and landing page for @supernal-interface/core",
  "private": true,
  "scripts": {
    "dev": "PORT=$(node scripts/find-port.js) && next dev -p $PORT",
    "build": "next build",
    "start": "PORT=$(node scripts/find-port.js) && next start -p $PORT",
    "export": "next build && next export",
    "generate": "supernal-interface generate",
    "deploy": "npm run build && npm run export",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:tools": "node scripts/test-tools.js",
    "test:integration": "npm run build && playwright test tests/e2e/widget-tool-integration.spec.ts"
  },
  "dependencies": {
    "@supernal-interface/core": "file:../",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "next": "^14.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0"
  }
}
